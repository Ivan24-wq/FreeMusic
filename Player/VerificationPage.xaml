<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Player.VerificationPage"
             Title="Подтверждение регистрации">
             
 <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Введите код подтверждения (6 цифр)"
               FontSize="16"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>

        <Entry x:Name="CodeEntry" Placeholder="Код" Keyboard="Numeric" MaxLength="6"/>

        <Button Text="Подтвердить" Clicked="VerifyCodeClicked"/>

        <Label x:Name="StatusLabel" TextColor="Red" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>